<div class="bs-menugrid">
  <div class="uk-grid-medium uk-child-width-1-2@m uk-grid-divider" uk-grid>
    <% menuItems.forEach(function(menuItem) { %> 
      <div class="uk-grid-match " uk-grid>
        <div class="uk-width-1-3">
          <img class="bs-menuImage" data-src="/images/<%= menuItem.image %>" uk-img>
        </div>
        <div class="uk-width-2-3 bs-centerVerticalContainer">
          <div class="bs-menuData bs-centerVertical">
            <span class="bs-menuItemName"><%= menuItem.name %></span><br>
            <%= menuItem.description %>
            <% if (menuItem.allergens) { %>
              <p></p>
              *Contains <%= menuItem.allergens %>
            <% } %> 
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
